{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-I", "include/adapters/gateways",
                "-I", "include/adapters/controllers",
                "-I", "include/core/common",
                "-I", "include/core/entities",
                "-I", "include/core/use_cases",
                "-I", "lib/raylib/src",
                "-I", "lib/imgui",
                "-I", "lib/implot",
                "-I", "lib/rlImGui",
                "-I", "lib/cereal/include",
                "-L", "lib/raylib/build",
                "-L", "lib/imgui/build",
                "-L", "lib/implot/build",
                "-L", "lib/rlImGui/build",
                "-g",
                "-o", "build/main.exe",
                "src/adapters/gateways/*.cpp",
                "src/core/entities/*.cpp",
                "src/core/use_cases/*.cpp",
                "src/main.cpp",
                "-l:libimgui.a",
                "-l:libimplot.a",
                "-l:libraylib.a",
                "-l:librlImGui.a",
                "-lwinmm",
                "-lgdi32",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compilação do projeto com raylib, imgui, implot e rlImGui"
        },
        {
            "label": "build-tests",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-I", "include/adapters/gateways",
                "-I", "include/adapters/controllers",
                "-I", "include/core/common",
                "-I", "include/core/entities",
                "-I", "include/core/use_cases",
                "-I", "lib/cereal/include",
                "-I", "lib/catch2",
                "-o", "build/tests.exe",
                "src/core/entities/*.cpp",
                "tests/test_main.cpp",
                "tests/test_polygon.cpp"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": []
        },
    ]
}